# Application Settings
APP_NAME="Blood Report Analyzer API"
VERSION="1.0.0"
DEBUG=True

# Database
DATABASE_URL="sqlite:///./data/medalizer.db"

# Security
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR="data/uploads"

# OCR Settings (optional - leave empty for auto-detection)
TESSERACT_CMD=""

# NER Model
SPACY_MODEL="en_core_web_sm"

# RAG Settings
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"
CHROMA_PERSIST_DIR="data/chroma_db"
KNOWLEDGE_BASE_DIR="data/medical_knowledge"

# OpenAI API (optional - for advanced RAG features)
OPENAI_API_KEY=""

# CORS Origins (comma-separated)
# ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
